				</div>
			</div>
		</div>
		<div class="row">
				@foreach (var events in Model.Events)
				{
					<div class="single-event mb-35">
						<div class="event-img">
						<a asp-action="Detail" asp-controller="Event" asp-route-id="@events.Id"><img src="~/assets/img/event/@events.ImageName" alt="event"></a>
						</div>
						<div class="event-content text-left">
						<h3>@events.Date.Day @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(events.Date.Month)</h3>
						<h4><a asp-action="Detail" asp-controller="Event" asp-route-id="@events.Id">@events.Name</a></h4>
							<ul>
								<li><i class="fa fa-clock-o"></i>@events.Time</li>
								<li><i class="fa fa-map-marker"></i>@events.Venue</li>
							</ul>
							<div class="event-content-right">
							<a class="default-btn" asp-action="Detail" asp-controller="Event" asp-route-id="@events.Id">join now</a>
