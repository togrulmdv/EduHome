@using EduHome.Areas.Admin.ViewModels.SliderViewModels;
@using EduHome.Models;
@{
	ViewData["Title"] = "Slider";
}
@model IEnumerable<SliderViewModel>
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Slider</h4>

					<div class="table-responsive">

						<a class="btn btn-primary" asp-action="create">Create</a>
						<table class="table">
							<thead>
								<tr>
									<th>IsDeleted</th>

									<th>Image</th>

									<th>Title</th>
									<th>Description</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								@foreach (SliderViewModel slider in Model)
								{
									<tr>
										<td>@slider.IsDeleted</td>

										<td><img src="~/assets/img/slider//@slider.ImageName" /></td>
										<td>@slider.Title</td>
										<td>@Html.Raw(slider.Description)</td>

										<td><a class="btn btn-primary" asp-action="Detail" asp-route-id="@slider.Id">Detail</a></td>
										<td><a class="btn btn-warning" asp-action="Update" asp-route-id="@slider.Id">Update</a></td>

										<td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@slider.Id">Delete</a></td>



									</tr>
								}


							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>
<!-- content-wrapper ends -->
