@using EduHome.ViewModels.BlogViewModels;

@{
    ViewData["Title"] = "Blog";
}

@model IEnumerable<BlogViewModel>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blogs</h4>

                    <div class="table-responsive">

                        <a class="btn btn-primary" asp-action="create">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Is Deleted</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Created By</th>
                                    <th>Created Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (BlogViewModel blog in Model)
                                {
                                    <tr>
                                        <td>@blog.IsDeleted</td>
                                        <td><img src="~/assets/img/Blog//@blog.ImageName" /></td>
                                        <td>@blog.Name</td>
                                        <td>@blog.CreatedBy</td>
                                        <td>@blog.CreatedDate</td>
                                        <td><a class="btn btn-primary" asp-action="Detail" asp-route-id="@blog.Id">Detail</a></td>
                                        <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@blog.Id">Update</a></td>

                                        <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@blog.Id">Delete</a></td>



                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->