@using EduHome.ViewModels.TeacherViewModels;
@{
	ViewData["Title"] = "Teacher";
}
@model IEnumerable<TeacherCardViewModel>

<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner")
<!-- Banner Area End -->
<!-- Teacher Start -->
<div class="teacher-area pt-150 pb-105">
	<div class="container">
		<div class="row">
			@foreach (var teachers in Model)
			{
				<div class="col-md-3 col-sm-4 col-xs-12">
					<div class="single-teacher mb-45">
						<div class="single-teacher-img">
							<a asp-action="Detail" asp-route-id="@teachers.Id"><img src="~/assets/img/teacher/@teachers.ImageName" alt="teacher"></a>
						</div>
						<div class="single-teacher-content text-center">
							<h2><a asp-action="Detail" asp-route-id="@teachers.Id">@teachers.Name</a></h2>
							<h4>@teachers.Role</h4>
							<ul>
								@foreach (var socialMedias in teachers.SocialMedias)
								{
									<li><a href="@socialMedias.URL"><i class="zmdi zmdi-@socialMedias.IconName"></i></a></li>
								}
							</ul>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
<!-- Teacher End -->