@using EduHome.ViewModels.AuthViewModels;
@{
    ViewData["Title"] = "Reset password";
}
@model ResetPasswordViewModel

<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner")
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3 text-center">
				<div class="login">
					<div class="login-form-container">
						<div class="login-text">
							<h2>reset password</h2>
							<span>Please enter your new password details.</span>
						</div>
						<div class="login-form">
							<form method="post" enctype="multipart/form-data">
								<div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:10px"></div>
								<input asp-for="NewPassword" placeholder="New Password" style="margin-bottom:4px">
								<span asp-validation-for="NewPassword" class="text-danger"></span>
								<input asp-for="NewPasswordConfirm" placeholder="Confirm Password" style="margin-bottom:4px; margin-top:20px">
								<span asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
								<div class="button-box">
									<button type="submit" class="default-btn">reset password</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Register end --> 