@using EduHome.Areas.Admin.ViewModels.SkillViewModels;

@{
    ViewData["Title"] = "Skill";
}

@model IEnumerable<SkillViewModel>

<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Blogs</h4>

                    <div class="table-responsive">

                        <a class="btn btn-primary" asp-action="create">Create</a>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>IsDeleted</th>
                                    <th>Name</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (SkillViewModel skill in Model)
                                {
                                    <tr>
                                        <td>  <a class="btn btn-@( skill.IsDeleted ? "danger" : "success") ">@skill.IsDeleted</a></td>


                                        <td>@skill.Name</td>


                                        <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@skill.Id">Detail</a></td>
                                        <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@skill.Id">Update</a></td>

                                        <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@skill.Id">Delete</a></td>



                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->
