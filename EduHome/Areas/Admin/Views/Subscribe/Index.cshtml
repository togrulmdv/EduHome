@using EduHome.Models;

@{
    ViewData["Title"] = "Subscribe";
}

@model IEnumerable<Subscribe>
<div class="content-wrapper">
	<div class="row">
		<div class="col-lg-12 grid-margin stretch-card">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Slider</h4>

					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<th>Email</th>

									<th>IsSubscribed</th>

									<th>Actions</th>
								</tr>
							</thead>
							<tbody>
								@foreach (Subscribe subscribes in Model)
								{
									<tr>
										<td>@subscribes.Email</td>

										<td>@subscribes.IsSubscribed</td>

										<td><a class="btn btn-@( subscribes.IsSubscribed ? "danger" : "success") " asp-action="ChangeStatus" asp-route-id="@subscribes.Id">Change Subscribe Status</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>

	</div>
</div>
<!-- content-wrapper ends -->
