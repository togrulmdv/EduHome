<!-- Login start -->
<div class="login-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>two step log in</h2>
                            <span>Please log in using OTP that sent to your email.</span>
                        </div>
                        <div class="login-form">
                            <form method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom:10px"></div>
                                <input asp-for="TwoFactorCode" placeholder="Enter OTP" style="margin-bottom:4px">
                                <span asp-validation-for="TwoFactorCode" class="text-danger"></span>    
                                <div class="button-box">
                                    <div class="login-toggle-btn">
                                        <input asp-for="RememberMe">
                                        <label for="RememberMe">Remember me</label>
                                    </div>
                                    <button type="submit" class="default-btn">Log in</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Login end --> 