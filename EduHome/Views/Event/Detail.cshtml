@using EduHome.Models;
@using EduHome.ViewModels.EventViewModels;
@using System.Globalization;
@{
	ViewData["Title"] = "Detail";
}
@model EventDetailViewModel

<!-- Banner Area Start -->
@await Component.InvokeAsync("Banner")
<!-- Banner Area End -->
<!-- Event Details Start -->
<div class="event-details-area blog-area pt-150 pb-140">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="event-details">
					<div class="event-details-img">
						<img src="~/assets/img/event/@Model.ImageName" alt="event-details">
						<div class="event-date">
							<h3>@Model.Date.Day @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(Model.Date.Month)</h3>
						</div>
					</div>
					<div class="event-details-content">
						<h2>@Model.Name</h2>
						<ul>
							<li><span>time : </span>@Model.Time</li>
							<li><span>venue : </span>@Model.Venue</li>
						</ul>
						<p>@Model.Description </p>
						<div class="speakers-area fix">
							<h4>speakers</h4>
							@foreach (var speakers in Model.Speakers)
							{
								<div class="single-speaker">
									<div class="speaker-img">
										<img src="~/assets/img/speaker/@speakers.ImageName" alt="speaker">
									</div>
									<div class="speaker-name">
										<h5>@speakers.Name</h5>
										<p>@speakers.Role, @speakers.Company </p>
									</div>
								</div>
							}
						</div>
					</div>
					<div class="reply-area">
						<h3>LEAVE A REPLY</h3>
						<p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
						<form id="contact-form" action="http://demo.devitems.com/eduhome/mail.php" method="post">
							<div class="row">
								<div class="col-md-12">
									<p>Name</p>
									<input type="text" name="name" id="name">
								</div>
								<div class="col-md-12">
									<p>Email</p>
									<input type="text" name="email" id="email">
								</div>
								<div class="col-md-12">
									<p>Subject</p>
									<input type="text" name="subject" id="subject">
									<p>Massage</p>
									<textarea name="message" id="message" cols="15" rows="10"></textarea>
								</div>
							</div>
							<a class="reply-btn" href="~/assets/#" data-text="send"><span>send message</span></a>
							<p class="form-messege"></p>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Event Details End -->