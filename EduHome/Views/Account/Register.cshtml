@using EduHome.ViewModels.AccountViewModels;
@{
	ViewData["Title"] = "Register";
}
@model RegisterViewModel

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
	<div class="banner-area text-center">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">
					<div class="banner-content-wrapper">
						<div class="banner-content">
							<h2>register</h2>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
	<div class="container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3 text-center">
				<div class="login">
					<div class="login-form-container">
						<div class="login-text">
							<h2>register</h2>
							<span>Please register using your own information.</span>
						</div>
						<div class="login-form">
							<form method="post" enctype="multipart/form-data">
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="namesurname" style="display:flex; justify-content:space-between; gap:8px">
									<div class="firstname" style="width:500px">
										<input asp-for="Name" placeholder="Name" style="margin-bottom:4px">
										<span asp-validation-for="Name" class="text-danger"></span>
									</div>
									<div class="secondname" style="width:500px">
										<input asp-for="Surname" placeholder="Surname" style="margin-bottom:4px">
										<span asp-validation-for="Surname" class="text-danger"></span>
									</div>
								</div>
								<input asp-for="UserName" placeholder="User Name" style="margin-bottom:4px; margin-top:20px">
								<span asp-validation-for="UserName" class="text-danger"></span>
								<input asp-for="Email" placeholder="Email" style="margin-bottom:4px; margin-top:20px">
								<span asp-validation-for="Email" class="text-danger"></span>
								<input asp-for="Password" placeholder="Password" style="margin-bottom:4px; margin-top:20px">
								<span asp-validation-for="Password" class="text-danger"></span>
								<input asp-for="PasswordConfirm" placeholder="Confirm Password" style="margin-bottom:4px; margin-top:20px">
								<span asp-validation-for="PasswordConfirm" class="text-danger"></span>
								<div class="button-box">
									<button type="submit" class="default-btn">register</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Register end --> 